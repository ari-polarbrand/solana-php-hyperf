{
    "name": "ari-polarbrand/solana-php-sdk",
    "description": "Solana PHP SDK",
    "keywords": [
        "tightenco",
        "solana-php-sdk",
        "blockchain",
        "solana",
        "sol",
        "sdk",
        "php"
    ],
    "homepage": "https://github.com/tighten/solana-php-sdk",
    "license": "MIT",
    "authors": [
        {
            "name": "Matt Stauffer",
            "email": "matt@tighten.co",
            "homepage": "https://tighten.co",
            "role": "Developer"
        },
        {
            "name": "Zach Vander Velden",
            "email": "zachvv11@gmail.com",
            "homepage": "https://zachvv.me",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ~8.0",
        "ext-sodium": "*",
        "guzzlehttp/guzzle": "^7.3",
        "hyperf/config": "^2.2",
        "hyperf/di": "^2.2",
        "hyperf/framework": "^2.2",
        "hyperf/guzzle": "^2.2",
        "hyperf/utils": "^2.2",
        "paragonie/sodium_compat": "^1.17",
        "tuupola/base58": "^2.1",
        "symfony/finder": "^6.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.9",
        "hyperf/testing": "^2.2",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^6.0",
        "phpstan/phpstan": "^1.8",
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "He426100\\SolanaPhpSdk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "He426100\\SolanaPhpSdk\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit 1024M -l 0 ./src",
        "cs-fix": "php-cs-fixer fix $1",
        "test": "co-phpunit -c phpunit.xml --colors=always"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "hyperf": {
            "config": "Ethereum\\ConfigProvider"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
